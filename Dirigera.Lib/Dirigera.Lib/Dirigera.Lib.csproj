<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>IKEA Dirigera Library</Title>
		<Authors>hag</Authors>
		<Description>A library to interact with the IKEA DIRIGERA smart hub.</Description>
		<RepositoryType>git</RepositoryType>
		<PackageTags>ikeadirigera;ikea;dirigera</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<IncludeSymbols>False</IncludeSymbols>
		<PackageVersion>$(PackageVersion)</PackageVersion>
		<PackageProjectUrl>https://heinandre.no/dirigera/</PackageProjectUrl>
		<RepositoryUrl>https://github.com/hagronnestad/dirigera/</RepositoryUrl>
		<PackageReadmeFile>README-nuget.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\README-nuget.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Zeroconf" Version="3.6.11" />
	</ItemGroup>

</Project>
